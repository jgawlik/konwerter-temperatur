{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Konwerter temperatur</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    {{ form_errors(form) }}
                    {{ form_end(form) }}

                    <table class="table">
                        <thead>
                            <tr>
                                <td>
                                    Wynik
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                {{ newTemp }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
